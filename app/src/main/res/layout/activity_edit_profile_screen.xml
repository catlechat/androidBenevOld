<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueNet"
    android:id="@+id/editProfileScreen"
    tools:context=".EditProfileScreen">

    <LinearLayout
        android:id="@+id/topLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/backText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/editP"
            android:textColor="@color/whiteBlue"
            android:textSize="25sp"
            app:drawableStartCompat="@drawable/ic_baseline_chevron_left_24" />
        <TextView
            android:id="@+id/saveText"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/save"
            android:textColor="@color/whiteBlue"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/middle"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">

        <ImageView
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView1"
            android:src="@drawable/ic_user">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_profile"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/blueNight"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:hint="@string/NF"
            android:textColorHint="@color/blueNight"
            android:textColor="@color/blueNight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blueNight"
            android:text="@string/email"
            android:textSize="18sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:hint="@string/NF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textColorHint="@color/blueNight"
            android:textColor="@color/blueNight"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/blueNight"
            android:textSize="18sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:hint="@string/NF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/blueNight"
            android:textColor="@color/blueNight"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/blueNight"
            android:textSize="18sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:hint="@string/NF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textColorHint="@color/blueNight"
            android:textColor="@color/blueNight"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textColor="@color/blueNight"
            android:textSize="18sp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:hint="@string/NF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="@color/blueNight"
            android:textAlignment="textStart"
            android:textColorHint="@color/blueNight"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>