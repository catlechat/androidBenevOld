<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_gradient"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"

    tools:context=".PreviewTaskScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fullPreview"
            android:layout_width="match_parent"
            android:id="@+id/smallPreview"
            android:orientation="vertical"
            android:layout_marginBottom="3dp"
            android:background="@drawable/rounded_contact"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textColor="@color/blueMiddle"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="10"
                android:text="@string/smaillPreview"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:layout_height="130dp">



                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/blueMiddle"
                    android:padding="3dp"
                    android:src="@drawable/ic_baseline_person_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:background="@color/blueMiddle"
                        android:padding="5dp"
                        android:textColor="@color/whiteBlue"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:maxLines="10"
                        android:text="@string/nameTest"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:background="@color/blueMiddle"
                        android:padding="5dp"
                        android:layout_height="120dp"
                        android:ellipsize="none"
                        android:textColor="@color/whiteBlue"
                        android:maxLines="3"
                        android:text="@string/taskTitleQuestion"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_preview_full"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/smallPreview">

            <TextView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textColor="@color/blueMiddle"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="10"
                android:text="@string/fullPreview"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">


                <ImageView
                    android:id="@+id/picturef"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/blueMiddle"
                    android:padding="3dp"
                    android:src="@drawable/ic_baseline_person_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/f_name"
                        android:textColor="@color/whiteBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@color/blueMiddle"
                        android:ellipsize="none"
                        android:maxLines="10"
                        android:padding="5dp"
                        android:text="@string/nameTest"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/f_title"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="3dp"
                        android:background="@color/blueMiddle"
                        android:ellipsize="none"
                        android:maxLines="3"
                        android:padding="5dp"
                        android:text="@string/taskTitleQuestion"
                        android:textColor="@color/whiteBlue"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blueMiddle"
                android:ellipsize="none"
                android:maxLines="10"
                android:padding="5dp"
                android:text="@string/adress"
                android:textColor="@color/whiteBlue"
                android:layout_marginBottom="3dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteBlue"
                android:background="@color/blueMiddle"
                android:ellipsize="none"
                android:maxLines="10"
                android:padding="5dp"
                android:layout_marginBottom="3dp"
                android:text="@string/phone"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteBlue"
                android:background="@color/blueMiddle"
                android:ellipsize="none"
                android:maxLines="10"
                android:padding="5dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emailTest"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteBlue"
                android:background="@color/blueMiddle"
                android:ellipsize="none"
                android:maxLines="10"
                android:padding="5dp"
                android:layout_marginBottom="3dp"
                android:text="@string/contact"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/blueMiddle"
                android:ellipsize="none"
                android:padding="5dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/whiteBlue"
                android:text="@string/informationDescription"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_weight="1"
                    android:textColor="@color/whiteBlue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/blueMiddle"
                    android:padding="5dp"
                    android:text="Date"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/hour"
                    android:layout_weight="1"
                    android:textColor="@color/whiteBlue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"
                    android:background="@color/blueMiddle"
                    android:padding="5dp"
                    android:text="hh:mm"
                    android:textSize="18sp" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:paddingEnd="50dp">

            <Button
                android:layout_width="0dp"
                android:id="@+id/back"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:textColor="@color/whiteBlue"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/Submit"
                android:layout_marginStart="50dp"
                android:textColor="@color/whiteBlue"
                android:textSize="20sp"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>