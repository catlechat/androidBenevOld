<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/backround_gradient_backwards"
    android:paddingBottom="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleCell"
            android:layout_width="match_parent"
            android:background="@color/blueNight"
            android:padding="5dp"
            android:textColor="@color/whiteBlue"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="10"
            android:text="@string/nameTest"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/descriptionCell"
            android:layout_width="match_parent"
            android:background="@color/blueMiddle"
            android:padding="5dp"
            android:layout_height="80dp"
            android:ellipsize="none"
            android:textColor="@color/whiteBlue"
            android:maxLines="3"
            android:text="@string/taskTitleQuestion"
            android:layout_marginStart="5dp"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateCell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/blueMiddle"
            android:padding="5dp"
            android:textColor="@color/whiteBlue"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="10"
            android:text="@string/hourthing"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/heureCell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/blueMiddle"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:textColor="@color/whiteBlue"
            android:maxLines="3"
            android:text="@string/Hour"
            android:layout_marginStart="5dp"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>